<!DOCTYPE html>
<html lang="en">

<head>
    <!-- < include('include/head', {title: '회원가입'}) %> -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>회원가입</title>

    <!-- axios CDN -->
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>

<body>
    <h1>회원가입</h1>
    <form name="form_register">
        <label for="id">아이디</label>
        <input id="id" type="text" name="id" required /><br />
        <label for="pw">비밀번호</label>
        <input id="pw" type="password" name="pw" required /><br />
        <label for="nickname">닉네임</label>
        <input id="nickname" type="text" name="nickname" required /><br />
        <label for="email">이메일</label>
        <input id="email" type="email" name="email" required /><br />
        <label for="phone">휴대폰 번호</label>
        <input id="phone" type="text" name="phone" required /><br />
        <button type="button" onclick="register();">회원가입</button>
    </form>
    <a href="/login">로그인 페이지로</a>

    <script>
        // POST /join
        function register() {
            const form = document.forms["form_register"];

            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }

            axios({
                method: "POST",
                url: "/join",
                data: {
                    id: form.id.value,
                    pw: form.pw.value,
                    nickname: form.nickname.value,
                    email: form.email.value,
                    phone: form.phone.value,
                },
            })
                .then((res) => {
                    console.log("응답 데이터", res.data);
                    alert("회원가입 성공!");

                    // 가입 성공시, 로그인 페이지로 이동
                    document.location.href = "/login";
                });
        }
    </script>
</body>

</html>